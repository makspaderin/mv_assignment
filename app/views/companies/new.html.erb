<h2 class="form_header"> Enter data for the new company: <h2>
<%= form_for @company do |form| %>
	<%= form.text_field :name, placeholder: "Company Name" %>
  <%= form.text_field :address, placeholder: "Company Address" %>
	<%= form.text_field :city, placeholder: "City" %>
  <%= form.text_field :country, placeholder: "Country" %>
	<%= form.email_field :email, placeholder: "Email (optional)" %>
	<%= form.telephone_field :phone_number, placeholder: "Phone Number (optional)" %>
	<%= form.submit "Add", class: "button hvr-fade" %>
<% end %>
